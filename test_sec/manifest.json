{
  "manifest_version": 3,
  "name": "Mon Extension",
  "version": "1.0",
  "description": "Analyse de sécurité de site web",
  "icons": {
    "16": "images/icon_16.png",
    "32": "images/icon_32.png",
    "198": "images/icon_198.png"
  },
  "permissions": [
    "webNavigation",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "198": "images/icon_198.png"
    }
  },
  "browser_action": {
    "default_icon": {
      "16": "images/icon_16.png",
      "32": "images/icon_32.png",
      "198": "images/icon_198.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}
