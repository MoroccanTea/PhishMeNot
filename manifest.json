{
  "manifest_version": 2,
  "name": "VirusTotal URL Scanner",
  "version": "1.0",
  "permissions": [
    "https://www.virustotal.com/*",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
}
